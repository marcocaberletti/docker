#!groovyâ€‹

stage('get code'){ 
  node('generic'){
    git 'https://github.com/marcocaberletti/docker.git'
    stash name: "source", inlude: "./*"
  }
}

stage('create Docker images'){
  parallel(
      "kube-docker-runner"        : { build_image('kube-docker-runner', 'latest') },
      "kube-kubectl-runner 1.4.6" : { build_image('kube-kubectl-runner', '1.4.6') },
      "kube-kubectl-runner 1.5.2" : { build_image('kube-kubectl-runner', '1.5.2') },
      "kube-maven-runner"         : { build_image('kube-maven-runner', 'latest') },
      )
}

def build_image(image, tag){
  node('docker'){
    unstash "source"
    
    dir(image){
      withEnv(["TAG=${tag}"]){
        sh "./build-image.sh"
        sh "./push-image.sh"
      }
    }
  }
}